%ol.breadcrumb
%h3 Pages
%table.table
  %thead
    %tr
      %th Title
      %th Slug
      %th Body
      %th{colspan: "3"}
  %tbody
    - @pages.each do |page|
      %tr
        %td= page.title
        %td= page.slug
        %td= page.body
        %td= link_to 'Show', [:admin, page]
        %td= link_to 'Edit', edit_admin_page_path(page)
        %td= link_to 'Destroy', [:admin, page], method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Page', new_admin_page_path
