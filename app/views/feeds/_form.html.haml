= form_with(model: feed, local: true) do |form|
  - if feed.errors.any?
    #error_explanation
      %h2
        = pluralize(feed.errors.count, "error")
        prohibited this feed from being saved:
      %ul
        - feed.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :title
    = form.text_field :title
  .field
    = form.label :slug
    = form.text_field :slug
  .field
    = form.label :body
    = form.text_area :body
  .field
    = form.label :type
    = form.text_field :type
  .actions
    = form.submit
